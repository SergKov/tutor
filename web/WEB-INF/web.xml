<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <filter-name>Encoding</filter-name>
        <filter-class>com.getprepared.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Encoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>UserSignedInFilter</filter-name>
        <filter-class>com.getprepared.filter.UserSignedInFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserSignedInFilter</filter-name>
        <url-pattern>/signUpPage</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>UserGuestFilter</filter-name>
        <filter-class>com.getprepared.filter.UserGuestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserGuestFilter</filter-name>
        <url-pattern>/studentHomePage</url-pattern>
        <url-pattern>/tutorHomePage</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ChangeUserToWorkerFilter</filter-name>
        <filter-class>com.getprepared.filter.ChangeStudentToTutorFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ChangeUserToWorkerFilter</filter-name>
        <url-pattern>/tutor/*</url-pattern>
    </filter-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.js</url-pattern>
        <url-pattern>*.ico</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>DataSource Reference</description>
        <res-ref-name>jdbc/tutor</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>


</web-app>