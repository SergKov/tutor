<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <filter-name>Encoding</filter-name>
        <filter-class>com.getprepared.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Encoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>StudentGuestFilter</filter-name>
        <filter-class>com.getprepared.filter.UserGuestFilter</filter-class>

        <init-param>
            <param-name>role</param-name>
            <param-value>student</param-value>
        </init-param>
        <init-param>
            <param-name>homePage</param-name>
            <param-value>/</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>StudentGuestFilter</filter-name>
        <url-pattern>/student-home-page/*</url-pattern>
    </filter-mapping>
    
    <filter>
        <filter-name>TutorGuestFilter</filter-name>
        <filter-class>com.getprepared.filter.UserGuestFilter</filter-class>
        
        <init-param>
            <param-name>role</param-name>
            <param-value>tutor</param-value>
        </init-param>
        <init-param>
            <param-name>homePage</param-name>
            <param-value>/tutor</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>TutorGuestFilter</filter-name>
        <url-pattern>/tutor/quizzes/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>StudentSignedInFilter</filter-name>
        <filter-class>com.getprepared.filter.UserSignedInFilter</filter-class>

        <init-param>
            <param-name>role</param-name>
            <param-value>student</param-value>
        </init-param>
        <init-param>
            <param-name>homePage</param-name>
            <param-value>/student-home-page</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>StudentSignedInFilter</filter-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/sign-up</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>TutorSignedInFilter</filter-name>
        <filter-class>com.getprepared.filter.UserSignedInFilter</filter-class>

        <init-param>
            <param-name>role</param-name>
            <param-value>tutor</param-value>
        </init-param>
        <init-param>
            <param-name>homePage</param-name>
            <param-value>/tutor/quizzes</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>TutorSignedInFilter</filter-name>
        <url-pattern>/tutor</url-pattern>
        <url-pattern>/sign-up</url-pattern>
    </filter-mapping>


    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.js</url-pattern>
        <url-pattern>*.ico</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>DataSource Reference</description>
        <res-ref-name>jdbc/tutor</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/pages/error/notFound.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/pages/error/serverError.jsp</location>
    </error-page>

</web-app>