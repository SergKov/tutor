<?xml version="1.0" encoding="UTF-8"?>
<Context crossContext="true"
         reloadable="true">
    <Resource
            name="jdbc/tutor"
            auth="Container"
            type="javax.sql.DataSource"
            maxActive="40"
            maxIdle="20"
            maxWait="10000"
            url="jdbc:mysql://localhost:3306/tutor"
            driverClassName="com.mysql.jdbc.Driver"
            username="root"
            password="root"
    />
</Context>